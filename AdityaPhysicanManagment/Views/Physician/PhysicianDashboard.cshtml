@{
    ViewData["Title"] = "Physician Dashboard";
}

<!-- Include Bootstrap CSS if not already in _Layout.cshtml -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-4">
    <h2>Physician Dashboard</h2>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs" id="physicianTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="appointments-tab" data-bs-toggle="tab" data-bs-target="#appointments" type="button">
                Appointments
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="medical-tab" data-bs-toggle="tab" data-bs-target="#medical" type="button">
                Medical Record
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-3">
        <!-- Appointments Tab -->
        <div class="tab-pane fade show active" id="appointments">
            @await Html.PartialAsync("Appointments")
        </div>
        <!-- Medical Record Tab -->
        <div class="tab-pane fade" id="medical">
            @await Html.PartialAsync("MedicalRecord")
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
